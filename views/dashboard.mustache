            <div class="modal-content">
              <form method="POST" action="/edit">

              <input type="hidden" id="expenseid" name="expenseid" />
                <div class="modal-header">
                    <h5 class="modal-title" id="logExpenseModalLabel">Log Expense</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                 <div class="form-group">
                    <input placeholder="Expense" type="text" class="form-control" name="title" id="title"/>
                  </div>
                  <div class="form-group">
                    <input placeholder="Amount Spent" type="text" class="form-control" name="amount" id="amount" />
                
                  </div>
                    <div class="form-group">
            
                   
    <select class="custom-select" id="budgetCategory" name="budgetCategory" >
      <option selected="">Choose budget</option>
